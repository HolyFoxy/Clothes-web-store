FROM node:20-alpine

WORKDIR /app

# Копируем только файлы зависимостей для кэширования
COPY package*.json ./

# Устанавливаем зависимости
RUN npm install

# Копируем конфигурационные файлы
COPY .env vue.config.js ./

COPY . app/

# Экспонируем порт дев-сервера
EXPOSE 8080

# Команда по умолчанию (будет переопределена в docker-compose для watch mode)
CMD ["npm", "run", "serve", "--", "--host", "0.0.0.0", "--port", "8080"]